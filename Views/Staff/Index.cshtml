@model IEnumerable<WebApplication1.Models.ViewModels.StaffViewModel>

@{
    ViewData["Title"] = "Staff Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Staff Management</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Staff
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Roles</th>
                            <th>Status</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var staff in Model)
                        {
                            <tr>
                                <td>@staff.UserID</td>
                                <td>@staff.FullName</td>
                                <td>@staff.Email</td>
                                <td>@staff.Phone</td>
                                <td>@staff.Address</td>
                                <td>
                                    @foreach (var role in staff.RoleNames)
                                    {
                                        <span class="badge badge-info mr-1">@role</span>
                                    }
                                </td>
                                <td>
                                    @if (staff.Status)
                                    {
                                        <span class="badge badge-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Inactive</span>
                                    }
                                </td>
                                <td>@staff.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="ManagePermissions" asp-route-id="@staff.UserID" class="btn btn-sm btn-info">
                                            <i class="fas fa-key"></i> Roles
                                        </a>
                                        <form asp-action="ToggleStatus" asp-route-id="@staff.UserID" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm @(staff.Status ? "btn-danger" : "btn-success")">
                                                @if (staff.Status)
                                                {
                                                    <i class="fas fa-times"></i> <span>Disable</span>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-check"></i> <span>Enable</span>
                                                }
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>